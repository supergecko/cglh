.ItemHeadText1{
	width:80rpx;
	height:42rpx;
	background:-webkit-linear-gradient(left,rgba(85,171,238,1) 0%,rgba(121,189,243,1) 100%);
	background:linear-gradient(90deg,rgba(85,171,238,1) 0%,rgba(121,189,243,1) 100%);
	border-radius:4rpx;
	font-size:26rpx;
	font-family:PingFang SC;
	font-weight:400;
	color:rgba(255,255,255,1);
	text-align: center;
	line-height: 42rpx;
}
