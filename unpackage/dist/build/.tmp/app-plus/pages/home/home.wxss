.wrap {
  width: 100%;
  font-family: 'PingFang-SC-Bold';
}
.wrap .header {
    width: 690rpx;
    height: 240rpx;
    margin: 50rpx auto 24rpx;
    background-color: #4076EE;
    border-radius: 10rpx;
}
.wrap .swiper {
    width: 690rpx;
    height: 240rpx;
    border-radius: 10rpx;
    margin: 0 auto 24rpx;
    margin-top: 64rpx;
}
.wrap .swiper image {
      width: 690rpx;
      height: 240rpx;
      text-align: center;
}
.wrap .info {
    box-sizing: border-box;
    width: 690rpx;
    height: 96rpx;
    line-height: 96rpx;
    padding: 0 17rpx;
    font-size: 30rpx;
    margin: 0 auto 53rpx;
    border: 1rpx solid #E6E8ED;
}
.wrap .info .word::after {
      content: '';
      display: inline-block;
      width: 20rpx;
}
.wrap .action {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: space-around;
            justify-content: space-around;
    width: 690rpx;
    margin: 0 auto 70rpx;
    text-align: center;
}
.wrap .action image {
      display: block;
      width: 114rpx;
      height: 130rpx;
}
.wrap .action .text {
      color: #333;
      font-size: 26rpx;
}
.wrap .main {
    width: 710rpx;
    margin: 0 auto 37rpx;
}
.wrap .main .item {
      box-sizing: border-box;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      width: 100%;
      height: 230rpx;
      padding: 26rpx 0 40rpx 46rpx;
      background-color: #0C85EB;
      border-radius: 10rpx;
      margin-top: 24rpx;
}
.wrap .main .item1 {
      box-sizing: border-box;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      width: 100%;
      border: 1rpx solid #D6D5D5;
      padding: 26rpx 0 40rpx 46rpx;
      background-color: #fff;
      border-radius: 10rpx;
      margin-top: 24rpx;
}
.wrap .main .tip {
      padding: 8rpx 14rpx;
      margin-right: 16rpx;
}
.wrap .main .but {
      width: 100%;
      height: 88rpx;
      margin-top: 37rpx;
      background-color: #DDEFFD;
      color: #42A2EC;
      font-size: 32rpx;
      line-height: 88rpx;
      text-align: center;
      border-radius: 10rpx;
}

